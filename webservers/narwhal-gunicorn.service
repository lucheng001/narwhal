[Unit]
Description=Gunicorn instance to server Narwhal
After=syslog.target network.target

[Service]
User=passta
Group=passta
Type=forking
PIDFile=/home/narwhal/pysite/narwhal/run/application.pid
WorkingDirectory=/home/narwhal/pysite/narwhal
ExecStart=/home/narwhal/pysite/narwhal/webservers/start-application.sh
ExecStop=/home/narwhal/pysite/narwhal/webservers/stop-application.sh
PrivateTmp=true

[Install]
WantedBy=multi-user.target

